<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@mipmap/blur_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/nav_view">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical|center|center_horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/profile_pic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:gravity="center_vertical|center|center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_gravity="left|center_vertical">

                <TextView
                    android:id="@+id/logged_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nagendra Palla"
                    android:gravity="left|center_horizontal"
                    android:textSize="18dp"
                    android:textIsSelectable="false"
                    android:padding="5dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/logged_useremail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nagendra.palla@outlook.com"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9030541768"
                    android:id="@+id/logged_usermobile"
                    android:padding="5dp"
                    android:phoneNumber="false"
                    android:textIsSelectable="false"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
